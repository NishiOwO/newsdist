#!/bin/sh
# $Id$

. ./Maintainer/tools.sh

ERRORS=0
for i in $DIRS; do
	echo "--- $i"
	for j in `list $i` `list_header $i`; do
		echo "----- $j"
		indent -npro -nlpl -lp -bbb -bad $j
		if [ ! "$?" = "0" ]; then
			ERRORS=$(($ERRORS + 1))
		fi
	done
done
rm -f *.BAK
echo
echo "$ERRORS error(s)"
if [ "$ERRORS" -gt 0 ]; then
	exit 1
fi
